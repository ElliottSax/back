# Application
APP_NAME="Financial Backtesting Platform"
APP_VERSION="0.1.0"
ENVIRONMENT="development"
DEBUG=True
API_PREFIX="/api/v1"

# Server
HOST="0.0.0.0"
PORT=8000

# Database
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/backtesting_db"

# Redis
REDIS_URL="redis://localhost:6379/0"

# API Keys
ALPHA_VANTAGE_API_KEY=""
POLYGON_API_KEY=""
IEX_CLOUD_API_KEY=""

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM="HS256"

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Data Settings
DATA_CACHE_TTL=3600
MAX_BACKTEST_DURATION_DAYS=3650
DEFAULT_INITIAL_CAPITAL=10000
