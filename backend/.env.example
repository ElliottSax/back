# ===========================================
# Application Settings
# ===========================================
APP_NAME="Financial Backtesting Platform"
APP_VERSION="0.1.0"
ENVIRONMENT="production"  # development, staging, production
DEBUG="False"  # Set to False in production
API_PREFIX="/api/v1"

# ===========================================
# Server Configuration
# ===========================================
HOST="0.0.0.0"
PORT="8000"

# ===========================================
# Database (PostgreSQL)
# ===========================================
# For Railway: Use the DATABASE_URL from Railway PostgreSQL service
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/backtesting_db"

# ===========================================
# Redis Cache
# ===========================================
# For Railway: Use the REDIS_URL from Railway Redis service
REDIS_URL="redis://localhost:6379/0"

# ===========================================
# Financial Data API Keys
# ===========================================
# Alpha Vantage: Get free key at https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=""

# Polygon.io: Get key at https://polygon.io/
POLYGON_API_KEY=""

# IEX Cloud: Get key at https://iexcloud.io/
IEX_CLOUD_API_KEY=""

# ===========================================
# Security Configuration
# ===========================================
# Generate a secure SECRET_KEY using: openssl rand -hex 32
SECRET_KEY="your-secret-key-here-change-in-production-use-long-random-string"
ACCESS_TOKEN_EXPIRE_MINUTES="30"
ALGORITHM="HS256"

# ===========================================
# CORS Configuration
# ===========================================
# Add your frontend URLs (JSON array format)
# For Railway: Add your Railway frontend URL here
CORS_ORIGINS='["http://localhost:3000","http://localhost:5173","https://your-frontend.railway.app"]'

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_PER_MINUTE="60"

# ===========================================
# Data & Backtest Settings
# ===========================================
DATA_CACHE_TTL="3600"  # Cache TTL in seconds (1 hour)
MAX_BACKTEST_DURATION_DAYS="3650"  # 10 years max
DEFAULT_INITIAL_CAPITAL="10000.0"
